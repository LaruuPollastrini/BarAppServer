# Server
PORT=3000

# Database (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=password
DB_DATABASE=bar_app

# JWT (si usas variables de entorno para secrets)
# JWT_SECRET=tu-secret-super-seguro

# Email - Recuperación de contraseña
# El link de reseteo se envía por correo. Configura SMTP según tu proveedor.
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=tu-correo@gmail.com
EMAIL_PASS=tu-app-password-de-gmail
EMAIL_FROM="BarApp" <noreply@barapp.com>

# URL del frontend (para el link de reseteo en el email)
FRONTEND_URL=http://localhost:5173

# Gmail: usa "Contraseña de aplicación" en https://myaccount.google.com/apppasswords
# SendGrid, Mailgun, etc.: usa sus credenciales SMTP correspondientes.
